{% extends "layout.html.twig" %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/result.css">
{% endblock %}

{% block content %}
{% set questions = session.game.questions %}
{% set score = session.game.score %}
{% set gameDuration = session.game.gameDuration %}
{% set i = 0 %}
<pre>
    {{ dump(session.game) }}
</pre>
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-7 col-md-10 col-12 mx-auto mt-4 d-block bg-white">
				<h1 class="text-center mt-4">Fin du quizz</h1>
				<div class="mt-3">
                    <div class="d-flex align-items-center">
					<h3 class="d-inline-block text-nowrap fs-4">Votre score :</h3>
					<p class="d-inline-block ms-3 .text-wrap mb-0">Vous avez {{nbGoodAnswer}} bonne réponse sur les {{nbQuestions}} questions</p>
                </div>
				</div>
                <div class="d-flex justify-content-start">
                    <div class="d-flex flex-column justify-content-around me-auto">
                        <div class="mt-3">
				            <h3 class="d-inline-block fs-4">Votre temps :</h3>
				            <p class="d-inline-block ms-3">{{gameDuration}} seconde</p>
                        </div>

                        <div class="mt-3">
                            <h3 class="d-inline-block fs-4">Votre classement :</h3>
                            <p class="d-inline-block ms-3">5ème</p>
                        </div>
                    </div>
                    <div class="circle-container">
                    <div class="percent" style="--num:{{percentGoodAnswers}};">
                        <svg>
                            <circle cx="70" cy="70" r="70"></circle>
                            <circle cx="70" cy="70" r="70"></circle>
                        </svg>
                        <div class="number-circle">
                            <h3 class="fs-2">{{percentGoodAnswers}}%</h3>
                        </div>
                    </div>
                </div>
                </div>
                <div class="d-flex justify-content-center mt-4">
                <div class="containers podium">
                    <div class="podium__item">
                        <div class="d-flex justify-content-center content-image-podium mx-auto">
                            <img src="https://picsum.photos/125/75" alt="" class="img-podium">
                        </div>
                      <p class="podium__city">Joueur 2</p>
                      <div class="podium__rank second color-podium">2</div>
                    </div>
                    <div class="podium__item">
                        <div class="d-flex justify-content-center content-image-podium mx-auto">
                            <img src="https://picsum.photos/125/75" alt="" class="img-podium">
                        </div>
                      <p class="podium__city">Joueur 1</p>
                      <div class="podium__rank first color-podium">1</div>
                  </div>
                    <div class="podium__item">
                        <div class="d-flex justify-content-center content-image-podium mx-auto">
                            <img src="https://picsum.photos/125/75" alt="" class="img-podium">
                        </div>
                      <p class="podium__city">Joueur 3</p>
                      <div class="podium__rank third color-podium">3</div>
                    </div>
                </div>
            </div>

                <div class="text-center">
                    <a href="#" class="btn btn-neutral btn-round my-3 w-25">rejouer</a>
                </div>

                {% for question in questions %}
                <div class="accordion" id="accordionExample{{i}}">
                    <div class="accordion-item">
                      <h2 class="accordion-header" id="heading{{i}}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{i}}" aria-expanded="false" aria-controls="collapse{{i}}">
                            <div class="d-flex justify-start align-items-center w-100">
                                <p class="mb-0 true-false"> {% if score[i] == 1 %} ✅ {% else %} ❌ {% endif %}</p>
                               <h3 class="mb-0 ms-5">question {{i + 1}}</h3>
                               <h3 class="ms-auto me-2 mb-0">5s</h3>
                            </div>
                        </button>
                      </h2>
                      <div id="collapse{{i}}" class="accordion-collapse collapse" aria-labelledby="heading{{i}}" data-bs-parent="#accordionExample{{i}}">
                        <div class="accordion-body">
                           <div class="d-flex justify-content-between align-items-center">
                               <div class="img-question-div">
                                  <img src="https://picsum.photos/125/75" alt="" class="img-question">
                               </div>
                               <h5 class="mx-4 lh-base">{{question.content}}</h5>
                               <h3>5s</h3>
                           </div>
                           <div class="container">
                            <div class="row mt-4 row-question">
                                <div class="col border border-3">{{question.answers.0.answer}}</div>
                                <div class="col border border-3">{{question.answers.1.answer}}</div>
                            </div>
                            <div class="row mt-3 row-question">
                                <div class="col border border-3">{{question.answers.2.answer}}</div>
                                <div class="col border border-3">{{question.answers.3.answer}}</div>
                            </div>
                            </div>
                           </div>
                        </div>
                      </div>
                    </div>
                    {% set i = i + 1 %}
                {% endfor %}
{% endblock %}
