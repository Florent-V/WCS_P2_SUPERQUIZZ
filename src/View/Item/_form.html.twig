<div class="m-auto container-md">
	<h1 class="text-center">Ajouter une question</h1>
	<form form method="post" enctype="multipart/form-data">

		<div class="row mb-3">
			<label for="theme" class="col-md-3 col-form-label col-form-label-sm text-md-end">Thème</label>
			<div class="col-lg-7 col-md-9">

				<select class="form-select form-select-sm" aria-label="Default select example" name="theme" id="theme">
				<option selected disabled>Choississez le thème de la question</option>
				<option value="1">Thème 1</option>
				<option value="2">Thème 2</option>
				<option value="3">Thème 3</option>
			</select>
			</div>
		</div>

			<div class="row mb-3">
			<label for="question" class="col-md-3 col-form-label col-form-label-sm text-md-end">Question</label>
			<div class="col-lg-7 col-md-9">
				<textarea class="form-control form-control-sm" id="question" name="question" rows="3" required>Entrez la question ici</textarea>
			</div>
		</div>

		<div class="row mb-3">
			<label for="goodAnswer" class="col-md-3 col-form-label col-form-label-sm text-lg-end">Réponse correcte</label>
			<div class="col-lg-7 col-md-9">
				<input type="text" class="form-control form-control-sm" id="goodAnswer" name="goodAnswer" placeholder="Réponse correcte" required>
			</div>
		</div>
		<div class="row mb-3">
			<label for="badAnswer1" class="col-md-3 col-form-label col-form-label-sm text-lg-end">Mauvaise Réponse N°1</label>
			<div class="col-lg-7 col-md-9">
				<input type="text" class="form-control form-control-sm" id="badAnswer1" name="badAnswer1" placeholder="Mauvaise Réponse N°1">
			</div>
		</div>
		<div class="row mb-3">
			<label for="badAnswer2" class="col-md-3 col-form-label col-form-label-sm text-lg-end">Mauvaise Réponse N°2</label>
			<div class="col-lg-7 col-md-9">
				<input type="text" class="form-control form-control-sm" id="badAnswer2" name="badAnswer2" placeholder="Mauvaise Réponse N°2">
			</div>
		</div>
		<div class="row mb-3">
			<label for="badAnswer3" class="col-md-3 col-form-label col-form-label-sm text-lg-end">Mauvaise Réponse N°3</label>
			<div class="col-lg-7 col-md-9">
				<input type="text" class="form-control form-control-sm" id="badAnswer3" name="badAnswer3" placeholder="Mauvaise Réponse N°3">
			</div>
		</div>


		<div class="row mb-3">
			<label for="picture" class="col-md-3 col-form-label col-form-label-sm text-lg-end">Uploader une image</label>
			<div class="col-lg-7 col-md-9">
				<input type="file" class="form-control form-control-sm" id="picture" name="picture" placeholder="Insérer votre image ici" accept="image/*">
			</div>
		</div>


		<div class="text-center">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div> 

		</form>


		<h1 class="text-center mt-4">Autre</h1>
		<form form method="post" enctype="multipart/form-data">

		<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
			<select class="form-select" aria-label="Default select example" name="theme" id="theme">
				<option selected disabled>Choississez le thème de la question</option>
				<option value="1">Thème 1</option>
				<option value="2">Thème 2</option>
				<option value="3">Thème 3</option>
			</select>
			<label for="theme">Thème</label>
		</div>

			<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
			<textarea class="form-control" placeholder="Leave a comment here" id="question" name="question" required></textarea>
			<label for="question">Question</label>
		</div>

		<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
			<input type="text" class="form-control" id="goodAnswer" name="goodAnswer" placeholder="Réponse correcte" required>
			<label for="goodAnswer">Réponse correcte</label>
		</div>

		<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
			<input type="text" class="form-control" id="badAnswer1" name="badAnswer1" placeholder="Mauvaise Réponse N°1">
			<label for="badAnswer1">Mauvaise Réponse N°1</label>
		</div>

		<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
			<input type="text" class="form-control" id="badAnswer2" name="badAnswer2" placeholder="Mauvaise Réponse N°2">
			<label for="badAnswer2">Mauvaise Réponse N°2</label>
		</div>

		<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
			<input type="text" class="form-control" id="badAnswer3" name="badAnswer3" placeholder="Mauvaise Réponse N°3">
			<label for="badAnswer3">Mauvaise Réponse N°3</label>
		</div>


		<div class="mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
			<label class="d-none" for="picture">Uploader une image</label>
			<input type="file" class="form-control form-control" id="picture" name="picture" placeholder="Insérer votre image ici" accept="image/*">
		</div>


		<div class="text-center">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div> 

	</form>
</div>