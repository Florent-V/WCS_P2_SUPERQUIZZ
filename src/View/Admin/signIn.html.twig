{% extends 'register_layout.html.twig' %}

{% block title %}
	Sign In Page
{% endblock %}


{% block titleForm %}
	<h2 class="mb-4">Connexion</h2>

{% endblock %}


{% block endForm %}
  {% for error in errors %}
        <p>{{ error }}</p>
  {% endfor %}
	<!-- Checkbox -->
	<div class="form-check d-flex justify-content-start my-4 gap-2">
		<input class="form-check-input" type="checkbox" value="" id="form1Example3"/>
		<label class="form-check-label" for="form1Example3">
			Remember Me</label>
	</div>
	<button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
	<hr class="my-4">
	<div class="social d-flex justify-content-center gap-3">
		<button class="btn btn-lg btn-primary mb-2 rounded-circle d-flex justify-content-center align-items-center" style="background-color: #dd4b39;" type="submit">
			<i class="fab fa-google"></i>
		</button>
		<button class="btn btn-lg btn-primary mb-2 rounded-circle d-flex justify-content-center align-items-center" style="background-color: #3b5998;" type="submit">
			<i class="fab fa-facebook-f"></i>
		</button>
		<button class="btn btn-lg btn-primary mb-2 rounded-circle d-flex justify-content-center align-items-center" style="background-color: #161B22;" type="submit">
			<i class="fa-brands fa-github"></i>
		</button>
		<button class="btn btn-lg btn-primary mb-2 rounded-circle d-flex justify-content-center align-items-center" style="background-color: #0A66C2;" type="submit">
			<i class="fa-brands fa-linkedin"></i>
		</button>
	</div>

{% endblock %}
