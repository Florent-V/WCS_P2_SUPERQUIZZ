{% extends "admin_layout.html.twig" %}

{% block content %}

<pre>
    {{ dump(questionsInfos) }}
</pre>

<div class="m-auto container-md">
    <h1 class="text-center mt-4">Modifier une question :</h1>
<form form method="post" enctype="multipart/form-data">

<input type="hidden" id="id" name="id" value="{{ id }}">

<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
    <select class="form-select" aria-label="Default select example" name="theme" id="theme">
        <option selected value="">Choississez le thème de la question</option>
        <option {% if questionsInfos.theme == 'Culture Générale' %} selected {% endif %} value="Culture Générale">Culture Générale</option>
        <option {% if questionsInfos.theme == 'Sciences' %} selected {% endif %} value="Sciences">Sciences</option>
        <option {% if questionsInfos.theme == 'Sport' %} selected {% endif %} value="Sport">Sport</option>
    </select>
    <label for="theme">Thème</label>
    <span>{{ errors.theme }}</span>
</div>

<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
    <textarea class="form-control" placeholder="Leave a comment here" id="question" name="question">{{ questionsInfos.content }}</textarea>
    <label for="question">Question</label>
    <span>{{ errors.question }}</span>
</div>

<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
    <input type="text" class="form-control" id="level" name="level" placeholder="Réponse correcte" value="{{ questionsInfos.difficulty_level }}">
    <label for="level">Niveau de difficulté : Facile, Moyen, Difficile ?</label>
    <span>{{ errors.level }}</span>
</div>

<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
    <input type="text" class="form-control" id="goodAnswer" name="goodAnswer" placeholder="Réponse correcte" value="{{ questionsInfos.answers.answer1.answer }}">
    <label for="goodAnswer">Réponse correcte</label>
    <span>{{ errors.goodAnswer }}</span>
</div>

<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
    <input type="text" class="form-control" id="badAnswer1" name="badAnswer1" placeholder="Mauvaise Réponse N°1" value="{{ questionsInfos.answers.answer2.answer }}">
    <label for="badAnswer1">Mauvaise Réponse N°1</label>
    <span>{{ errors.badAnswer1 }}</span>
</div>

<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
    <input type="text" class="form-control" id="badAnswer2" name="badAnswer2" placeholder="Mauvaise Réponse N°2" value="{{ questionsInfos.answers.answer3.answer }}">
    <label for="badAnswer2">Mauvaise Réponse N°2</label>
    <span>{{ errors.badAnswer2 }}</span>
</div>

<div class="form-floating mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
    <input type="text" class="form-control" id="badAnswer3" name="badAnswer3" placeholder="Mauvaise Réponse N°3" value="{{ questionsInfos.answers.answer4.answer }}">
    <label for="badAnswer3">Mauvaise Réponse N°3</label>
    <span>{{ errors.badAnswer3 }}</span>
</div>


<div class="mb-3 offset-lg-1 col-lg-10 offset-xl-2 col-xl-8">
    <label class="d-none" for="picture">Uploader une image</label>
    <input type="file" class="form-control form-control" id="picture" name="picture" placeholder="Insérer votre image ici" accept="image/*">
</div>


<div class="text-center">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>

</form>
</div>
{% endblock %}
